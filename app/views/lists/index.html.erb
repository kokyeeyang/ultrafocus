<p id="notice"><%= notice %></p>

<div id="main2">
<h1>Your goals</h1>

<table>
  <thead>
    <tr>
      <th>Go ahead and add more!</th>
       <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <%=form_tag search_path, id:"list_form", remote: true do %>
     <%= label_tag(:title, "Search for:") %>
      <%= text_field_tag :title, nil, title: 'title' %>
      <%= submit_tag("Search") %> 
      <br/>
    <% end %>
    <div id="newlist">
      <% @lists.each do |list| %>
        <% if current_user.role == "admin" %>

        Description: <%= list.title %><br/>
        Task1: <%= list.task1 %><br/>
        Task2: <%= list.task2 %><br/>
        Task3: <%= list.task3 %><br/>
        Task4: <%= list.task4 %><br/>
        Task5: <%= list.task5 %><br/>
                <%= image_tag list.avatar %><br/>
        <% elsif list.user_id == current_user.id %>

        Description: <%= list.title %><br/>
        Task1: <%= list.task1 %><br/>
        Task2: <%= list.task2 %><br/>
        Task3: <%= list.task3 %><br/>
        Task4: <%= list.task4 %><br/>
        Task5: <%= list.task5 %><br/>
                <%= image_tag list.avatar %><br/>
          <%= link_to 'Show', list %>
          <%= link_to 'Edit', edit_list_path(list) %>
          <%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure?' } %><br/> 
      <% end %>
    <% end %>
    </div>
  </tbody>
</table>
</div>
<br>
 
